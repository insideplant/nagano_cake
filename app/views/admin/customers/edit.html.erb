 <div class="container">
    <h1>User info edit</h1>
    <div class="border-top border-dark" style="padding:5px;"></div><br>
    <div class="text-right">
    </div>
  <div>
  <%= form_with model:@customer, url:admin_customer_path(@customer.id), local:true do |f| %>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">User Name</label>
      <%= f.text_field :user_name, class: "col-sm-10 form-control" %>
    </div>
    
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">First Name</label>
      <%= f.text_field :first_name, class: "col-sm-10 form-control" %>
    </div>
    
     <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">Last Name</label>
      <%= f.text_field :last_name, class: "col-sm-10 form-control" %>
    </div>
    
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">First Name_kana</label>
      <%= f.text_field :first_name_kana, class: "col-sm-10 form-control" %>
    </div>
    
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">Last Name_kana</label>
      <%= f.text_field :last_name_kana, class: "col-sm-10 form-control" %>
    </div>
    
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">Postal Code</label></label>
      <%= f.text_field :postal_code, class: "col-sm-10 form-control" %>
    </div>
    
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">Address</label>
      <%= f.text_field :address, class: "col-sm-10 form-control" %>
    </div>
    
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">Telephone Number</label>
      <%= f.text_field :telephone_number, class: "col-sm-10 form-control" %>
    </div>
    
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">Email</label>
      <%= f.text_field :email, class: "col-sm-10 form-control" %>
    </div>
    
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">status</label>
      <%= f.radio_button :is_active, :有効 %>有効
      <%= f.radio_button :is_active, :退会 %>退会
    </div>
    
    
    <div class="form-group">
      <div class="text-right">
      <%= f.submit :"Save Changes", class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
 </div>
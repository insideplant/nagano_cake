
<div class="container">
  <h1>User index</h1>
  <div class="border-top border-dark" style="padding:5px;"></div><br>
  <table class="table table-striped">
   <thody>
    <tr>
     <th>id</th>
     <th>User Name</th>
     <th>Name</th>
     <th>Name_kana</th>
     <th>Status</th>
     <th>Details</th>
    </tr>
   </thody>
   <thody>
    <% @customers.each do |customer| %>
     <tr>
      <td><%= customer.id %></td>
      <td><%= customer.user_name %></td>
      <td><%= customer.last_name %><%= customer.first_name %></td>
      <td><%= customer.last_name_kana %><%= customer.first_name_kana %></td>
      <td><%= customer.is_active %></td>
      <td><%= link_to "Details", admin_customer_path(customer.id) %></td>
      </tr>
    <% end %>
   </thody>
  </table>
</div>

<div class="container">
  <h1>Product detail</h1>
  <div class="border-top border-dark" style="padding:5px;"></div><br>

  <div class="row text-center">
    <div class="col-4">
    <%= attachment_image_tag @item, :image, :fill, 350,350, fallback: "no_image.jpg", size:'150x150' %>
    </div>
    <div class="col-6 text-left">
      <table >
       <tbody>
        <tr>
         <td style="width: 50%">商品名</td>
         <td style="width: 50%" ><%= @item.name %></td>
        </tr>
        <tr>
         <td>商品説明</td>
         <td><%= @item.introduction %></td>
        </tr>
        <tr>
         <td>ジャンル</td>
         <td><%= @item.genre_id %></td>
        </tr>
        <tr>
         <td>税込価格</br>(税抜き価格)</td>
         <td><%= @item.price %></td>
        </tr>
        <tr>
         <td>販売ステータス</td>
         <td><%= @item.is_active%></td>
        </tr>
       </tbody>
      </table>
    </div>
  </div>
  <div class="row">
   <div class="col text-center"><%= link_to '編集', edit_admin_product_path(@item.id), class:"btn btn-secondary btn-lg" %></div>
  </div>
</div>
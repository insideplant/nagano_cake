
 <div class="container">
  <h2>商品投稿</h2>
  <%= form_with model:@new_item, url:admin_products_path, local:true do |f| %>
   <div class="form-group">
   <label>写真</label>
   <%= f.attachment_field :image%>
   </div>
   
   <div class="form-group">
   <label>ジャンル</label>
   <%= f.collection_select :genre_id, @genres, :id, :genre_name, include_blank: "選択して下さい", class:"form-control"  %>
   </div>
   
   <div class="form-group">
   <label>商品名</label>
   <%= f.text_field :name, class:"form-control"  %>
   </div>
   
   <div class="form-group">
   <label>価格</label>
   <%= f.text_field :price, class:"form-control"  %>
   </div>
   
   <div class="form-group">
   <label>本文</label>
   <%= f.text_area :introduction, class:"form-control"  %>
   </div>
   
   <%= f.submit '投稿' %>
   
   <% end %>
 </div>
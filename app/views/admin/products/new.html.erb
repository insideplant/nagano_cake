<h1>Admin::Products#new</h1>
<p>Find me in app/views/admin/products/new.html.erb</p>

<div>
<h2>商品投稿</h2>
 <%= form_with model:@new_item, url:admin_products_path, local:true do |f| %>
 <div>
  <h4>写真</h4>
  <%= f.attachment_field :image %>
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, @genres, :id, :genre_name, include_blank: "選択して下さい" %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>価格</h4>
  <%= f.text_field :price %>
  <h4>本文</h4>
  <%= f.text_area :introduction %>
  <%= f.submit '投稿' %>
  </div>
 <% end %>
</div>
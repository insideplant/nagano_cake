<h1>Admin::Products#edit</h1>
<p>Find me in app/views/admin/products/edit.html.erb</p>

<div>
<h2>商品投稿</h2>
 <%= form_with model:@item, url:admin_product_path, local:true do |f| %>
 <div>
  <h4>写真</h4>
  <%= f.attachment_field :image %>
  <h4>ジャンル</h4>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>価格</h4>
  <%= f.text_field :price %>
  <h4>本文</h4>
  <%= f.text_area :introduction %>
  <%= f.submit '更新' %>
  </div>
 <% end %>
</div>
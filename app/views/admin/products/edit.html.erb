 <div class="container">
  <h1>商品編集</h1>
  <div class="border-top border-dark" style="padding:5px;"></div><br>

  <%= form_with model:@item, url:admin_products_path, local:true do |f| %>
   <div class="form-group">
   <label>商品画像</label>
   <%= f.attachment_field :image%>
   </div>

   <div class="form-group">
   <label>商品名</label>
   <%= f.text_field :name, class:"form-control"  %>
   </div>

   <div class="form-group">
   <label>商品説明</label>
   <%= f.text_area :introduction, class:"form-control"  %>
   </div>

   <div class="form-group">
   <label>ジャンル</label>
   <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, include_blank: "選択して下さい", class:"form-control" %>
   </div>

   <div class="form-group">
   <label>税抜価格(円)</label>
   <%= f.text_field :price, class:"form-control" %>
   </div>

   <div class="form-group">
   <label>販売ステータス</label></br>
   販売中 <%= f.radio_button :is_active, :true %>
   販売停止中 <%= f.radio_button :is_active, :false %>
   </div>

   <%= f.submit 'Update', class:"btn btn-secondary btn-sm" %>

   <% end %>
 </div>
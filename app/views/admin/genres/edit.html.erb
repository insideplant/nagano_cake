
<div>
<h2>ジャンル投稿</h2>
 <%= form_with model:@new_genre, url:admin_genres_path, local:true do |f| %>
 <div>
  <h4>ジャンル名</h4>
  <%= f.text_field :genre_name %>
  <%= f.submit '投稿' %>
  </div>
 <% end %>
</div>

<div>
<h2>ジャンル名一覧<h2>
 
 <table>
 <thody>
  <tr>
   <th>id</th>
   <th>ジャンル</th>
   <th></th>
  </tr>
 </thody>
 
 <thody>
  <% @genres.each do |genre| %>
   <%= form_with model:genre, url:admin_genre_path(genre.id), local:true do |f| %>
   <tr>
    <td><%= genre.id %></td>
    <td><%= f.text_field :genre_name %></td>
    <td><%= link_to "更新" %></td>
   </tr>
   <% end %>
  <% end %>
 </thody>
 </table>
</div>
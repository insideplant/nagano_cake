<div class="container">
  <h1>Edit Genre</h1>
  <div class="border-top border-dark" style="padding:5px;"></div><br>
  <div>
   <%= form_with model:@genre, url:admin_genre_path, local:true do |f| %>
   <label class="form-control-label">Genre Name</label>
   <%= f.text_field :genre_name %>
   <%= f.submit 'Update', class:"btn btn-secondary btn-sm" %>
   <% end %>
  </div>
</div>
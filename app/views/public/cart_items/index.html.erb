<div class="container">
  <h1>Cart Items</h1>
  <div class="border-top border-dark" style="padding:5px;"></div><br>
  <div class="text-right">
    <%= link_to ' カートを空にする', cart_items_destroy_all_path, method: :delete, class:"fas fa-shopping-cart btn btn-secondary btn-md" %>
  </div>

  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Product name</th>
          <th>price</th>
          <th>amount</th>
          <th>total</th>
          <th></th>
        </tr>
      </thead>
      <% sum = 0 %>
      <% @cart_items.each do |cart_item| %>
      <thody>
        <tr>
          <td><%= attachment_image_tag cart_item.item, :image, :fill, 50,50, fallback: "no_image.jpg", size:'50x50' %>
          <%= link_to cart_item.item.name,item_path(cart_item.item) %></td>
          <td>¥ <%= cart_item.item.price %></td>
          <td>
            <%= form_with model:cart_item, url: cart_item_path(cart_item), local:true do |f| %>
            <%= f.select :amount,cart_item.amount, options_for_select(1..10), class:"form-control" %>
            <%= f.hidden_field :item_id, :value => cart_item.item.id %>
            <%= f.submit '変更する', class:"btn btn-secondary btn-md" %>
            <% end %>
            </td>
          <td>¥ <%= cart_item.total_price %></td>
          <td><%= link_to '削除する', cart_item_path(cart_item), method: :delete, class:"btn btn-secondary btn-md" %></td>
        </tr>
      </thody>
      <% sub_total = cart_item.total_price.to_i  %>
      <% sum+=sub_total %>
      <% end %>
     </div>
    </table>

    <table class="table table-striped">
      <thody>
        <tr>
          <td>ALL</td>
          <td>¥ <%= sum %></td>
        </tr>
      </thody>
    </table>

    <%= link_to "買い物を続ける", root_path, class:"btn btn-secondary btn-md"%>
  </div>
    <div class="text-center">
     <%= link_to "情報入力に進む", new_order_path, class:"btn btn-secondary btn-md"%>
    </div>
</div>

<div class="container">
  <%= form_with model:current_customer, url:'/customers/mypage/update', local:true do |f| %>
  <form>
    <div class="form-group">
      <label class="form-cotrol-label">User name</label>
      <%= f.text_field :user_name, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <label class="form-cotrol-label">First name</label>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <label class="form-cotrol-label">Last name</label>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <label class="form-cotrol-label">First name_kana</label>
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <label class="form-cotrol-label">Last name_kana</label>
      <%= f.text_field :last_name_kana, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <label class="form-cotrol-label">Email</label>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <label class="form-cotrol-label">New Password</label>
      <%= f.password_field :encrypted_password, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <label class="form-cotrol-label">New Password</label>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <label class="form-cotrol-label">Postal Code</label>
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>

    <div class="form-group">
      <label class="form-cotrol-label">Address</label>
      <%= f.text_field :address, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <label class="form-cotrol-label">Telephone number</label>
      <%= f.text_field :telephone_number, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <div class="text-right">
      <%= f.submit :"Save Changes", class: "btn btn-secondary" %>
      </div>
    </div>
    
    </form>
  <% end %>

</div>
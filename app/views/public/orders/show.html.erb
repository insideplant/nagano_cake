<div class="container">
  <h1>Order's history</h1>
  <div class="border-top border-dark" style="padding:5px;"></div><br>

  <div class="row">
    <div class="col-6">
    <table class="table table-striped">
      <thody>
        <tr>
            <td>
            　注文日
            </td>
            <td>
              <%= @order.created_at %>
            </td>
          </tr>
        <tr>
          <td>
            配送先
          </td>
          <td>
            <%= @order.postal_code %>
            <%= @order.address %>
          </td>
        </tr>
        <tr>
            <td>
              支払い方法
            </td>
            <td>
              <%= @order.payment_method %>
            </td>
        </tr>
        <tr>
            <td>ステータス</td>
            <td></td>
        </tr>
      </thody>
    </table>
    </div>

    <div class="col-5">
    <table class="table table-striped">
      <thody>
        <tr>
          <td>
          　商品合計
          </td>
          <td>
            @order_detail.amount
          </td>
        </tr>
        <tr>
          <td>
            配送料
          </td>
          <td>
          </td>
        </tr>
        <tr>
          <td>
            ご請求額
          </td>
          <td>

          </td>
        </tr>
        </thody>
    </table>
    </div>
  </div>

  <div class="row col-6">
    <div>
    <table  class="table table-striped">
    <thody>
        <tr>
          <td>
          　商品
          </td>
          <td>
            単価（税込）
          </td>
          <td>
            個数
          </td>
          <td>
            小計
          </td>
        </tr>
        <% @order_details.each do |order_detail|%>
        <tr>
          <td>
            <%= order_detail.item.name %>
          </td>
          <td>
            <%= order_detail.price %>
          </td>
          <td>
            <%= order_detail.amount %>
          </td>
          <td>
          </td>
        </tr>
        <% end %>
    </thody>
    </table>
    </div>
  </div>
</div>
<div class="container">
  <h1>Order's confirm</h1>
  <div class="border-top border-dark" style="padding:5px;"></div><br>

  <div class="row">
      <table class="table table-striped col-7">
         <thody>
          <tr>
              <td>
                  商品名
              </td>
              <td>
                  単価
              </td>
              <td>
                  数量
              </td>
              <td>
                  小計
              </td>
          </tr>
          <% @cart_items.each do |cart_item|%>
          <tr>
              <td>
                  <%= cart_item.item.name %>
              </td>
              <td>
                  <%= cart_item.item.price %>
              </td>
              <td>
                  <%= cart_item.amount %>
              </td>
              <td>
                  <%= cart_item.total_price  %>
              </td>
          </tr>
         </thody>
         <% end %>
      </table>
      <table class="table table-striped col-5">
         <thody>
          <tr>
              <td>
                  送料
              </td>
              <td>
                  
              </td>
          </tr>
          <tr>
              <td>
                  商品合計
              </td>
              <td>
                  請求金額
              </td>
          </tr>
         </thody>
          
      </table>
      
      <div>
          <div>
              <span>支払い方法</span>
              <%= @payment_method %>
          </div>
          <div>
              <span>お届け先</span>
              <%= @payment_method}%>
          </div>
          
      </div>
      
      <%= form_with model:@order, url: orders_path, local:true do |f| %>
       <%= f.hidden :postal_code, :value => @address.postal_code  %>
       <%= f.hidden :address, :value => @order.address %>
       <%= f.hidden :customer_name, :value => current_customer.name %>
       <%= f.hidden :shipping_fee, :value => @address.postal_code  %>
       <%= f.hidden :payment_amount, :value => @address.postal_code  %>
       <%= f.hidden :payment_method, :value => @address.postal_code  %>
       <%= f.hidden :status, :value => @address.postal_code  %>
      <% end %>
      
  </div>


</div>


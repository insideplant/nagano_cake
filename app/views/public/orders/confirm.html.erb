<div class="container">
  <h1>Order's confirm</h1>
  <div class="border-top border-dark" style="padding:5px;"></div><br>

  <div class="row">
      <table class="table table-striped col-7">
         <thody>
          <tr>
              <td>
                  商品名
              </td>
              <td>
                  単価
              </td>
              <td>
                  数量
              </td>
              <td>
                  小計
              </td>
          </tr>
          <% sum = 0 %>
          <% @cart_items.each do |cart_item|%>
          <tr>
              <td>
                  <%= cart_item.item.name %>
              </td>
              <td>
                  <%= cart_item.item.price %>
              </td>
              <td>
                  <%= cart_item.amount %>
              </td>
              <td>
                  <%= cart_item.total_price  %>
              </td>
          </tr>
         </thody>
         <% sub_total = cart_item.total_price.to_i  %>
         <% sum+=sub_total %>
         <% end %>
      </table>
      <table class="table table-striped col-5">
         <thody>
          <tr>
              <td>
                  送料
              </td>
              <td>
                 ¥ 800
              </td>
          </tr>
          <tr>
              <td>
                  商品合計
              </td>
              <td>
                  ¥ <%= sum %>
              </td>
          </tr>
          <tr>
              <td>請求金額</td>
              <td>¥ <%= sum + 800 %></td>
          </tr>
         </thody>
          
      </table>
      
      <div>
          <div>
              <span>支払い方法</span>
              <%= @payment_method %>
          </div>
          <div>
              <span>お届け先</span>
              <%= @order.name %>
              <%= @order.postal_code %>
              <%= @order.address %>
              <%= @address %>
          </div>
          
      </div>
      

      
  </div>


</div>


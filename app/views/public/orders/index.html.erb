<div class="container">
  <h1>Order's Index</h1>
  <div class="border-top border-dark" style="padding:5px;"></div><br>

  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Order Date</th>
          <th>Address</th>
          <th>Item</th>
          <th>Amount</th>
          <th>Status</th>
          <th>Detail</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <thody>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.postal_code %>
          <%= order.address %></br>
          <%= order.customer_name %>
          </td>
          <td> <% order.order_details.each do|order_detail|%>
            <%#= order_detail.item.item %>
            <% end %>
          </td>
          <td><%= order.payment_amount %></td>
          <td><%= order.status %></td>
          <td><%= link_to "表示する",order_path(order), class:"btn btn-secondary btn-md" %></td>
          <% puts "order.id" %>
        </tr>
      </thody>
      <% end %>
     </div>
    </table>
   </div>
</div>

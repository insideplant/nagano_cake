<div class="container">
  <h1>Order Info</h1>
  <div class="border-top border-dark" style="padding:5px;"></div><br>
  
  
　<%= form_with model:@order, url: orders_confirm_path, local:true do |f|  %>
  <fieldset class="form-group">
      <legend class="row">支払い方法</legend>
      <div class="row">
        <div class="form-check">
          <%= f.radio_button :payment_method_option, 0, :true %> 
          <label class="form-check-label">クレジットカード</label>
        </div>
      </div>
      
      <div class="row">
        <div class="form-check">
          <%= f.radio_button :payment_method_option, 1, :true %> 
          <label class="form-check-label">銀行振り込み</label>
        </div>
      </div>
  </fieldset>
  
  <fieldset class="form-group">
      <legend class="row">お届け先</legend>
      <div class="row">
        <div class="form-check">
          <%= f.radio_button :address_option, 0, :true %> 
          <label class="form-check-label">ご自身の住所</label>
        </div>
        <%= current_customer.postal_code%><%= current_customer.address%>
        <%= current_customer.last_name %><%= current_customer.first_name%>
      </div>
      <div class="row">
        <div class="form-check">
          <%= f.radio_button :address_option, 1, :true %> 
          <label class="form-check-label">登録済住所から選択</label>
          <%= f.collection_select :address, @addresses, :id, :address, include_blank: "選択して下さい", class:"form-control"  %>
        </div>
      </div>
      <div class="row">
        <div class="form-check">
          <%= f.radio_button :address_option, 2, :true %> 
          <label class="form-check-label">新しいお届け先</label>
          <div class="field">
            <label class="row inline-text">郵便番号(ハイフンなし)</label>%>
            <%= f.text_field :postal_code %>
            <label class="row">住所</label>
            <%= f.text_field :address %>
            <label class="row">宛名</label>
            <%= f.text_field :customer_name %>
          </div>
        </div>
        <div class="form-group">
          <div class="text-right">
          <%= f.submit :"Save Changes", class: "btn btn-secondary" %>
        </div>
    </div>
      </div>
  </fieldset>
  <% end %>
</div>

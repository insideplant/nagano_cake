<div class="container">
  <%= form_with model:@address, url: address_path, local:true do |f| %>
    <div class="form-group">
      <label class="form-cotrol-label">Postal Code</label>
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>

    <div class="form-group">
      <label class="form-cotrol-label">Address</label>
      <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group">
      <label class="form-cotrol-label">Name</label>
      <%= f.text_field :customer_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <div class="text-right">
      <%= f.submit :"Save Changes", class: "btn btn-secondary" %>
    </div>
    
  <% end %>

</div>